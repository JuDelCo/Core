{
	"files.exclude": {
		// -------------------------------
		// System / Git / Editor
		// -------------------------------
		"**/.DS_Store": true,
		"**/.hidden": true,
		"*.lnk": true,
		"**/.git": true,
		"**/.gitignore": true,
		"**/.gitattributes": true,
		"**/.gitmodules": true,
		"**/.editorconfig": true,
		".vscode/": true,
		".vs/": true,
		// -------------------------------
		// Visual Studio & Build Artifacts
		// -------------------------------
		"**/*.booproj": true,
		"**/*.pidb": true,
		"**/*.suo": true,
		"**/*.user": true,
		"**/*.userprefs": true,
		"**/*.dll": true,
		"**/*.exe": true,
		"**/*.pdb": true,
		"**/bin/": true,
		"**/Bin/": true,
		"**/obj/": true,
		"**/Obj/": true,
		"**/nuget.config": true,
		"**/runtimes/": true,
		// -------------------------------
		// Media Files
		// -------------------------------
		"**/*.gif": true,
		"**/*.ico": true,
		"**/*.jpg": true,
		"**/*.jpeg": true,
		"**/*.png": true,
		"**/*.psd": true,
		"**/*.tga": true,
		"**/*.tif": true,
		"**/*.tiff": true,
		"**/*.mid": true,
		"**/*.midi": true,
		"**/*.wav": true,
		"**/*.3ds": true,
		"**/*.3DS": true,
		"**/*.fbx": true,
		"**/*.FBX": true,
		"**/*.lxo": true,
		"**/*.LXO": true,
		"**/*.ma": true,
		"**/*.MA": true,
		"**/*.obj": true,
		"**/*.OBJ": true,
		"**/*.pdf": true,
		// -------------------------------
		// Unity & Game Assets
		// -------------------------------
		"Library/": true,
		"**/*.asset": true,
		"**/*.asmdef": true,
		"**/*.anim": true,
		"**/*.cubemap": true,
		"**/*.controller": true,
		"**/*.flare": true,
		"**/*.mat": true,
		"**/*.meta": true,
		"**/*.prefab": true,
		"**/*.physicsMaterial2D": true,
		"**/*.unity": true,
		"**/*.unityproj": true,
		"**/LICENSE": true,
		"**/LICENSE.md": true,
		".gradle/": true,
	},
	"files.watcherExclude": {
		"**/.git/objects/**": true,
		"**/.git/subtree-cache/**": true,
		"**/node_modules/**": true,
		"**/.hg/store/**": true,
		"**/Resources/": true,
		"**/bin/": true,
		"**/Bin/": true,
		"**/obj/": true,
		"**/Obj/": true,
	}
}